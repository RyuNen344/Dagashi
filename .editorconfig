root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{kt, kts}]
max_line_length = 1000
disabled_rules = no-wildcard-imports, import-ordering, no-multi-spaces

[*.md]
trim_trailing_whitespace = false

[*.{json, yaml, yml}]
indent_size = 2
